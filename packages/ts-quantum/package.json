{
  "name": "ts-quantum",
  "version": "0.9.0",
  "description": "TypeScript library for quantum mechanics calculations and utilities",
  "module": "dist/esm/index.mjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/esm/index.mjs"
    }
  },
  "author": {
    "name": "Deepak Vaid",
    "email": "dvaid79@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "quantum",
    "quantum-mechanics",
    "quantum-computing",
    "physics",
    "typescript",
    "state-vectors",
    "quantum-gates",
    "angular-momentum",
    "wigner-symbols"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/space-cadet/ts-quantum.git"
  },
  "bugs": {
    "url": "https://github.com/space-cadet/ts-quantum/issues"
  },
  "homepage": "https://github.com/space-cadet/ts-quantum#readme",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist node_modules coverage",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "docs": "typedoc",
    "prepublishOnly": "npm run build",
    "web:build": "pnpm build && node web/build-bundle.js",
    "web:serve": "pnpm web:build && cd web && npx http-server -p 8080",
    "web:dev": "pnpm build && node web/dev-server.js",
    "deploy:vercel": "vercel"
  },
  "dependencies": {
    "@types/mathjs": "^9.4.2",
    "marked": "17.0.1",
    "mathjs": "^12.4.3",
    "rehype-stringify": "10.0.1",
    "remark-gfm": "4.0.1",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.2",
    "unified": "11.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^0.34.0",
    "esbuild": "^0.27.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "vitest": {
    "exclude": [
      "node_modules",
      "dist"
    ],
    "environment": "node"
  }
}
